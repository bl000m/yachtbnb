<div class="container">
  <div class="form-wrapper">
    <div class="input-form">
      <%= simple_form_for [@yacht, @booking] do |f| %>
      <%= f.input :voyager, label: "How many sea bass:",
                             as: :integer,
                             required: false %>
      <%= f.input :start_date, label: "Save your dates:",
                               as: :string,
                               required: false,
                               input_html: { id: "range_start", class: "d-none"} %>
      <%= f.input :end_date, label: false,
                             as: :string,
                             required: false,
                             input_html: { id: "range_end", class: "d-none" } %>
      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <% end %>
    </div>

  </div>
</div>
