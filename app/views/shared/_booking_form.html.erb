<div class="container">
  <div class="booking-form">
    <div class="booking-content">
      <%= simple_form_for [@yacht, @booking] do |f| %>
        <div class="booking-input">
          <%= f.input :voyager, label: "Number of passengers:",
                              as: :integer,
                              required: false %>
        </div>
        <div class="booking-input">
          <%= f.input :start_date, label: "Save your dates:",
                                as: :string,
                                required: false,
                                input_html: { id: "range_start", class: "d-none"} %>
          <%= f.input :end_date, label: false,
                              as: :string,
                              required: false,
                              input_html: { id: "range_end", class: "d-none" } %>
        </div>
        <div class="form-button">
          <%= f.button :submit, "Book", class: "form-button-text" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
