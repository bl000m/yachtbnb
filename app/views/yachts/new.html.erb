<div class="form-container">
  <div class="form-wrapper">
    <h2>New yacht</h2>
    <%= simple_form_for(@yacht) do |f| %>
      <div class="form-inputs">
        <%= f.input :name,
                    required: true,
                    autofocus: true %>
        <%= f.input :address,
                    required: true,
                    autofocus: true,
                    input_html: { data: { geocoder_target: "address" }, class: "d-none" },
                     wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= f.input :price,
                    required: true,
                    autofocus: true %>
        <%= f.input :description,
                    required: true,
                    autofocus: true %>
        <%= f.input :voyager,
                    required: true,
                    autofocus: true %>
        <%= f.input :photo, as: :file, label: "featured photo" %>
        <%= f.input :photos, as: :file, label: "secondary photo", input_html: {multiple: true} %>
      </div>

      <div class= "add-btn">
        <%= f.button :submit, "add this yacht to your list"%>
      </div>
    <% end %>
  </div>
</div>
