<div class="container">
  <h1>
    <span>Stop dreaming your life</span>
    <span>live your dreams</span>
  </h1>

  <div style="width: 100%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="card-container">
    <% @yachts.each do |yacht| %>
      <div class="card-wrapper">
        <div class="card">
          <div class="card-front">
            <p><%= yacht.name %></p>
             <% if yacht.photo.key %>
              <%= cl_image_tag yacht.photo.key %>
            <% else %>
              <img src="https://res.cloudinary.com/stefc/image/upload/v1653570985/development/df33lzfti1h3m95nxvgvkkbjuba6.jpg" alt="yacht">
            <% end %>
             <div class="card-category">
             </div>
            <div class="card-price">
              <span><%= yacht.price%>â‚¬ / day</span>
              <br>
              <p><%= yacht.stars%> stars</p>
            </div>
            <i class="arrow-icon fas fa-arrow-right"></i>
          </div>
          <!--link to yacht show-->
          <div class="card-back">
            <%= link_to 'Rent this yacht', yacht_path(yacht), class: "btn" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
